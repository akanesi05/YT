<p>ハロー</p>
<div class="justify-content-center"><%= link_to "新しい投稿",new_post_path%></div>
<ul>
 <% @posts.each do|post|%>
 <li>
   <h2><%= post.title %></h2>
   <h2><%= post.content %></h2>
   <div class="justify-content-center"><%= link_to "編集",edit_post_path(post) %></div>
   <div class="justify-content-center"><%= button_to "削除",post_path(post), method: :delete, data: { confirm: '本当に削除しますか？' } %></div>
   <span>
    <small><%=post.created_at %></small>
   </span>
 </li>

 <% end %>
</ul>
